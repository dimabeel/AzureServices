@page
@model Azure.FileStorage.KeyModel
@{
    ViewData["Title"] = "Keys";
}

<div class="row justify-content-between">
    <div class="col-6">
        <form method="get">
            <div style="padding-top: 10px;" class="row align-items-center">
                <label class="fw-bold">Load key:</label>
                <div class="col-auto">
                    <input class="form-control" name="name" placeholder="Write key name" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-success" type="submit">Load</button>
                </div>
            </div>
        </form>
        <form method="post" asp-page-handler="deleteKey">
            <div style="padding-top: 10px;" class="row align-items-center">
                <label class="fw-bold">Delete key:</label>
                <div class="col-auto">
                    <input class="form-control" name="name" placeholder="Write key name" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </div>
            </div>
        </form>
        <form method="post" asp-page-handler="recoverDeletedKey">
            <div style="padding-top: 10px;" class="row align-items-center">
                <label class="fw-bold">Recover deleted key:</label>
                <div class="col-auto">
                    <input class="form-control" name="name" placeholder="Write key name" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-success" type="submit">Restore</button>
                </div>
            </div>
        </form>
        <form method="post" asp-page-handler="createKey">
            <div style="padding-top: 10px;" class="row align-items-center">
                <label class="fw-bold">Create key:</label>
                <div class="col-auto">
                    <input class="form-control" name="name" placeholder="Write key name" />
                </div>
                <div class="col-auto">
                    <select class="form-select" name="keyType" aria-label="Select key type">
                        <option value="1">Rsa</option>
                        <option value="2">Ec</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" type="submit">Create</button>
                </div>
            </div>
        </form>
        <form method="post" asp-page-handler="backupKey">
            <div style="padding-top: 10px;" class="row align-items-center">
                <label class="fw-bold">Backup key:</label>
                <div class="col-auto">
                    <input class="form-control" name="name" placeholder="Write key name" />
                </div>
                <div class="col-auto">
                    <input class="form-control" name="path" placeholder="Write path" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" type="submit">Backup</button>
                </div>
            </div>
        </form>
        <form method="post" asp-page-handler="recoverBackupKey" enctype="multipart/form-data">
            <div style="padding-top: 10px;" class="row align-items-center">
                <label class="fw-bold">Recover key from backup:</label>
                <div class="col-auto">
                    <input class="form-control" name="loadFile" type="file" id="formFile">
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" type="submit">Restore</button>
                </div>
            </div>
        </form>
        <form method="post" asp-page-handler="keysProperties">
            <div style="padding-top: 10px;" class="row align-items-center">
                <label class="fw-bold">Load keys properties:</label>
                <div class="col-auto">
                    <button class="btn btn-primary" type="submit">Load</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-6">
        <form method="post" asp-page-handler="reset">
            <div class="row align-items-center">
                <div class="col-auto">
                    <label class="fw-bold">Result:</label>
                </div>
                <div class="col-auto">
                    <button class="btn btn-sm btn-warning">Reset</button>
                </div>
            </div>
            <div>
                @Model.Message
            </div>
        </form>
    </div>
</div>